        "# desafio 107\n",
        "def aumentar(n, x):\n",
        "    a = (n * x) / 100\n",
        "    return n + a\n",
        "\n",
        "def diminuir(n, x):\n",
        "    d = (n*x)/100\n",
        "    return n - d\n",
        "\n",
        "def dobro(n):\n",
        "    return n*2\n",
        "\n",
        "def metade(n):\n",
        "    return n/2"
